<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../views/partials/head'); %>
</head>

<body class="container">

    <header>
        <% if (user && user.role == true) { %>
            <%- include('../views/partials/admin_header'); %>
                <% } else { %>
                    <%- include('../views/partials/header'); %>
                        <% } %>
    </header>

    <main>
        <div class="row">
            <div class="col-3">
                <h2>Categories</h2>
                <ul class="list-group">
                    <li class="list-group-item"><a href="/">All products</a></li>
                    <% categories.forEach(function(category) { %>
                        <li class="list-group-item">
                            <a href="/categories/<%= category.slug %>">
                                <%= category.title %>
                            </a>
                        </li>
                        <% }); %>
                </ul>
            </div>
            <div class="col-9">
                <h2 style="text-align: center;">
                    <%= product.name %>
                </h2>
                <div class="row">
                    <div class="col-7">
                        <img src="/product_images/<%= product._id %>.png" style="width: 400px; height: 400px;" alt="Photo">
                    </div>
                    <div class="col-5">
                        <!-- <b>Product details: <%= product.describe %></b> -->
                        <textarea name="" id="" cols="30" rows="5" disabled style="font-weight: bold;"><%= product.describe %></textarea>
                        <h4>
                            Price:
                            <%= product.price %>$
                        </h4>
                        <b style="display: inline;">Buy: </b>
                        <% if (user) { %>
                            <a href="#">Add to my cart</a>
                            <% } else { %>
                                <a href="/login">Please login to buy</a>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- <footer>
        <%- include('../views/partials/footer'); %>
    </footer> -->

</body>

</html>